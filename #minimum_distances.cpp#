int minimumDistances(int a_count, int* a) {
    
    int min_distance = INT_MAX;
    int difference = 0; 
    bool flag = false; // to let me know if the comparison made was successful 
    
    for (int i = 0; i < a_count; i++){
        for (int j = i+1; j < a_count; j++) { 
            if(a[i] == a[j]){
                difference = j - 1;
                if (difference < min_distance){
                    min_distance = difference;
                    flag = true; // if all is well then there is at least one match
                }
            } 
            
        }
        
    }
    if (flag == false){
        return -1;
    }
    return min_distance; 

}